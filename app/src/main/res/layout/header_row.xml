<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemCityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorPrimary"
                android:textSize="24dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/itemHeaderDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No data"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/itemHeaderWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind: 0 m/s"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/itemHeaderPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure: 0 hpa"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/itemHeaderHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity: 0 %"
                android:textSize="16dp"/>
        </LinearLayout>

        <ImageView

            android:id="@+id/itemHeaderIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="o"
            android:textSize="48dp"/>

        <TextView
            android:id="@+id/itemHeaderTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/itemHeaderIcon"
            android:layout_alignRight="@+id/itemHeaderIcon"
            android:layout_below="@+id/itemHeaderIcon"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp"
            android:text="0 Â°C"
            android:textSize="22dp"/>
    </RelativeLayout>
</LinearLayout>